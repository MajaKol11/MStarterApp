<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StarterApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:StarterApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Main">
            <ShellContent ContentTemplate="{DataTemplate views:LoginPage}" />
        </Tab>
        <Tab Title="About">
            <ShellContent ContentTemplate="{DataTemplate views:AboutPage}" />
        </Tab>
    </TabBar>

    <Shell.MenuBarItems>
        <MenuBarItem Text="Action">
            <MenuFlyoutItem Text="Logout" Command="{Binding LogoutCommand}" />
            <MenuFlyoutItem Text="Settings" Command="{Binding NavigateToSettingsCommand}" />
            <MenuFlyoutItem Text="Profile" Command="{Binding NavigateToProfileCommand}" />
            <MenuFlyoutItem Text="Admin Panel" Command="{Binding NavigateToAdminCommand}" />
        </MenuBarItem>
    </Shell.MenuBarItems>
</Shell>
